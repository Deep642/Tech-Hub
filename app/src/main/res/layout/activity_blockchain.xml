<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".blockchain">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:textColor="@android:color/holo_orange_light"
        android:textStyle="bold"
        android:text="Blockchain Development"
        android:textSize="40sp"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_marginVertical="35dp"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/Bl_image1"
            android:layout_marginHorizontal="10dp"
            android:layout_width="175dp"
            app:cardCornerRadius="100mm"
            android:layout_height="match_parent"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/solidity"
                    >
                </ImageView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/Bl_image2"
            android:layout_marginHorizontal="10dp"
            android:layout_width="175dp"
            app:cardCornerRadius="100mm"
            android:layout_height="match_parent"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="160dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/etherium"
                    >
                </ImageView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_marginVertical="35dp"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/Bl_image3"
            android:layout_marginHorizontal="10dp"
            android:layout_width="175dp"
            app:cardCornerRadius="100mm"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/metamask"
                    >
                </ImageView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/Bl_image4"
            android:layout_marginHorizontal="10dp"
            android:layout_width="175dp"
            app:cardCornerRadius="100mm"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ganache"
                    >
                </ImageView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>